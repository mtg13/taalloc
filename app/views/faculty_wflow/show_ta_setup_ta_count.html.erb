<h2> Please select the desired number of TAs for your course(s) </h2>

<%= form_tag do %>
<table>
<thead>
    <tr>
    <th colspan="3"></th>
    </tr>
</thead>
<tbody>
    <% @courses.each do |details| %>
    <tr>
        <td><%= details["coursenum"] %></td>
        <% ["phd", "msr", "dual", "mtech"].each do |tatype| %>
            <td><%= tatype %></td>
            <td><input name="tacount[<%= details["coursenum"] %>][<%= tatype %>]" type="text" value="<%= @tacount[details["coursenum"]][tatype] %>" /></td>
        <% end %>
    </tr>
    <% end %>
    
</tbody>
</table>
<%= submit_tag "Submit" %>
<% end %>
