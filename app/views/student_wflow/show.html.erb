<%= form_tag do %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each_pair do |coursenum, course| %>
      <tr>
	<td><%= course["coursenum"] %></td>
	<td><%= course["coursename"] %></td>
	<td><%= course["core"] %></td>
	<td><%= course["instructor"] %></td>
	<td><%= course["description"] %></td>
	<td>
		<% priority = course["priority"] %>
		<select id="priority_selection" name="course_priority[<%= coursenum %>]">
			<option value="0" <%= (priority == 0)?"selected":"" %> >Do not Assign</option>
			<option value="1" <%= (priority == 1)?"selected":"" %> >Not Keen</option>
			<option value="2" <%= (priority == 2)?"selected":"" %> >Willing</option>
			<option value="3" <%= (priority == 3)?"selected":"" %> >Eager</option>
		</select>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag "Submit" %>
<% end %>

<br>
